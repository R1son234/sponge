/* pages/checkin/checkin.wxss */
.container {
  height: 100vh;
  background-color: var(--background);
}

.scroll-container {
  height: 100%;
  padding: 32rpx;
}

.loading-container,
.error-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.loading-text {
  font-size: 32rpx;
  color: var(--text-secondary);
}

.error-text {
  font-size: 32rpx;
  color: var(--text);
  margin-bottom: 32rpx;
  text-align: center;
}

/* 区域标题 */
.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text);
  margin-bottom: 24rpx;
}

/* 统计区域 */
.stats-section {
  margin-bottom: 48rpx;
}

.stats-grid {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  gap: 16rpx;
}

.stat-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  min-width: 0;
  background-color: var(--surface);
  border-radius: 24rpx;
  padding: 24rpx 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.stat-value {
  font-size: 52rpx;
  font-weight: bold;
  color: var(--primary);
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 26rpx;
  color: var(--text-secondary);
}



/* 记录区域 */
.records-section {
  margin-bottom: 48rpx;
}

.section-header {
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.records-count {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.records-list {
  gap: 24rpx;
}

.record-card {
  background-color: var(--surface);
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.record-header {
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.record-type {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text);
}

.record-duration {
  font-size: 24rpx;
  color: var(--primary);
  font-weight: 500;
}

.record-time {
  font-size: 22rpx;
  color: var(--text-secondary);
  margin-bottom: 8rpx;
}

.record-notes {
  font-size: 22rpx;
  color: var(--text-secondary);
  font-style: italic;
}

.empty-records {
  background-color: var(--surface);
  border-radius: 16rpx;
  padding: 64rpx 32rpx;
  align-items: center;
  text-align: center;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 32rpx;
}

/* 图表区域 */
.chart-section {
  margin-bottom: 48rpx;
}

.chart-placeholder {
  background-color: var(--surface);
  border-radius: 16rpx;
  padding: 64rpx 32rpx;
  align-items: center;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.chart-text {
  font-size: 28rpx;
  color: var(--text);
  font-weight: 600;
  margin-bottom: 16rpx;
}

.chart-description {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 日历样式 */
.calendar-section {
  margin-bottom: 48rpx;
}

.calendar-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 24rpx;
}

.calendar-controls {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 32rpx;
  margin-top: 16rpx;
}

.calendar-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text);
  min-width: 160rpx;
  text-align: center;
  white-space: nowrap;
}

.calendar-btn {
  background-color: transparent;
  border: none;
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  transition: all 0.2s ease;
}

.calendar-btn:active {
  background-color: rgba(74, 144, 226, 0.1);
}

.btn-text {
  font-size: 32rpx;
  color: var(--primary);
  font-weight: bold;
}

.calendar-grid {
  background-color: var(--surface);
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.week-header {
  display: flex;
  justify-content: space-around;
  margin-bottom: 16rpx;
}

.week-day {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-secondary);
  text-align: center;
  flex: 1;
}

.calendar-days {
  display: flex;
  flex-wrap: wrap;
}

.calendar-day {
  width: calc(100% / 7);
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  position: relative;
  padding: 8rpx;
}

.calendar-day.other-month {
  opacity: 0.4;
}

.calendar-day.today {
  background-color: rgba(74, 144, 226, 0.1);
  border: 2rpx solid var(--primary);
}

.calendar-day.has-record {
  background-color: rgba(76, 175, 80, 0.1);
}

.day-number {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text);
}

.record-indicator {
  position: absolute;
  bottom: 4rpx;
  display: flex;
  align-items: center;
  gap: 2rpx;
}

.indicator-dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background-color: #4CAF50;
}

.record-count {
  font-size: 16rpx;
  color: #4CAF50;
  font-weight: 600;
}

.calendar-legend {
  display: flex;
  justify-content: center;
  gap: 32rpx;
  margin-top: 24rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.legend-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
}

.legend-dot.today {
  background-color: var(--primary);
  border: 1rpx solid var(--primary);
}

.legend-dot.has-record {
  background-color: #4CAF50;
}

.legend-text {
  font-size: 20rpx;
  color: var(--text-secondary);
}

/* 响应式适配 */
@media (max-width: 768px) {
  .scroll-container {
    padding: 16rpx;
  }
  
  .stats-grid {
    flex-direction: row;
    gap: 12rpx;
  }
  
  .stat-card {
    padding: 20rpx 12rpx;
    min-width: 0;
  }
  
  .stat-value {
    font-size: 36rpx;
  }
  
  .stat-label {
    font-size: 20rpx;
  }
  
  .record-card {
    padding: 20rpx 16rpx;
  }
  
  .empty-records {
    padding: 48rpx 24rpx;
  }
  
  /* 移动端日历适配 */
  .calendar-grid {
    padding: 16rpx;
  }
  
  .calendar-title {
    font-size: 28rpx;
    min-width: 140rpx;
  }
  
  .calendar-btn {
    width: 48rpx;
    height: 48rpx;
    border: none;
  }
  
  .btn-text {
    font-size: 24rpx;
  }
  
  .week-day {
    font-size: 24rpx;
  }
  
  .day-number {
    font-size: 24rpx;
  }
  
  .calendar-legend {
    gap: 24rpx;
  }
  
  .legend-text {
    font-size: 18rpx;
  }
}