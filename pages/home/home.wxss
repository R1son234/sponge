/* pages/home/home.wxss */
.container {
  height: 100vh;
  background-color: var(--background);
}

.scroll-container {
  height: 100%;
}

.loading-container,
.error-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 64rpx;
}

.loading-text {
  font-size: 32rpx;
  color: var(--text-secondary);
}

.error-text {
  font-size: 32rpx;
  color: var(--text);
  margin-bottom: 32rpx;
  text-align: center;
}

/* 欢迎区域 */
.welcome-section {
  padding: 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 16rpx;
}

.welcome-title {
  font-size: 56rpx;
  font-weight: bold;
  color: var(--text);
  text-align: center;
  margin-bottom: 16rpx;
}

.welcome-subtitle {
  font-size: 32rpx;
  color: var(--text-secondary);
  text-align: center;
  line-height: 44rpx;
}

/* 统计卡片 */
.stats-card {
  margin: 32rpx;
  align-self: stretch;
  display: flex;
  flex-direction: column;
}

.stats-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.stats-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text);
}

.view-more {
  display: flex;
  align-items: center;
}

.view-more-text {
  font-size: 28rpx;
  color: var(--primary);
  font-weight: 500;
}

.stats-row {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  gap: 16rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  min-width: 0;
  background-color: var(--surface);
  border-radius: 24rpx;
  padding: 24rpx 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--primary);
}

.stat-label {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-top: 8rpx;
}

/* 区域样式 */
.section {
  padding: 32rpx;
  display: flex;
  flex-direction: column;
}

.section-title {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text);
  margin-bottom: 16rpx;
}

.section-subtitle {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 32rpx;
}

/* 快速开始网格 */
.quick-start-grid {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  gap: 16rpx;
}

.quick-start-card {
  flex: 1;
  background-color: var(--surface);
  border-radius: 32rpx;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.quick-start-icon {
  width: 120rpx;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 24rpx;
}

.icon-image {
  width: 60rpx;
  height: 60rpx;
}

.quick-start-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text);
  text-align: center;
  margin-bottom: 8rpx;
}

.quick-start-duration {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 指南卡片 */
.guide-card {
  align-self: stretch;
}

.guide-header {
  flex-direction: row;
  align-items: center;
  margin-bottom: 24rpx;
}

.guide-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text);
  margin-left: 16rpx;
}

.guide-description {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 40rpx;
  margin-bottom: 32rpx;
}

/* 响应式适配 */
@media (max-width: 768px) {
  .quick-start-card {
    margin: 8rpx 0;
  }
}