/* pages/friends/friends.wxss */
.container {
  height: 100vh;
  background-color: var(--background);
}

.loading-container,
.error-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 64rpx;
}

.loading-text {
  font-size: 32rpx;
  color: var(--text-secondary);
}

.error-text {
  font-size: 32rpx;
  color: var(--text);
  margin-bottom: 32rpx;
  text-align: center;
}

/* 滚动容器 */
.scroll-container {
  height: 100%;
  padding: 32rpx;
}

/* 模块样式 */
.module {
  margin-bottom: 48rpx;
}

.module-header {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 24rpx;
  width: 100%;
  min-height: 40rpx;
}

.module-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text);
  flex: 1;
}

.add-friend-btn {
  font-size: 26rpx;
  color: var(--primary);
  font-weight: 500;
  white-space: nowrap;
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}

.module-card {
  background-color: var(--surface);
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 动态列表 */
.activities-list {
  gap: 24rpx;
}

.activity-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid var(--border);
  align-items: center;
}

.activity-item:last-child {
  border-bottom: none;
}

.activity-header {
  flex-direction: row;
  align-items: center;
  margin-bottom: 16rpx;
  justify-content: center;
}

.activity-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 16rpx;
}

.activity-user {
  flex: 1;
  align-items: center;
}

.user-name {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text);
  margin-bottom: 4rpx;
  text-align: center;
}

.activity-time {
  font-size: 20rpx;
  color: var(--text-secondary);
  text-align: center;
}

.activity-content {
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.activity-type {
  font-size: 24rpx;
  color: var(--text);
  font-weight: 500;
}

.activity-duration {
  font-size: 22rpx;
  color: var(--primary);
  font-weight: 500;
}

.activity-notes {
  font-size: 22rpx;
  color: var(--text-secondary);
  font-style: italic;
  padding: 12rpx;
  background-color: var(--light-blue);
  border-radius: 8rpx;
  text-align: center;
}

/* 好友列表 */
.friends-list {
  gap: 20rpx;
}

.friend-item {
  flex-direction: row;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--border);
}

.friend-item:last-child {
  border-bottom: none;
}

.friend-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 24rpx;
}

.friend-info {
  flex: 1;
}

.friend-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text);
  margin-bottom: 4rpx;
}

.friend-account {
  font-size: 22rpx;
  color: var(--text-secondary);
}

/* 空状态 */
.empty-content {
  align-items: center;
  text-align: center;
  padding: 64rpx 0;
  flex-direction: column;
}

.empty-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 24rpx;
}

.empty-title {
  font-size: 28rpx;
  color: var(--text);
  font-weight: 600;
  margin-bottom: 12rpx;
  display: block;
  width: 100%;
}

.empty-subtitle {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 32rpx;
  display: block;
  width: 100%;
}

/* 响应式适配 */
@media (max-width: 768px) {
  .scroll-container {
    padding: 16rpx;
  }
  
  .module {
    margin-bottom: 32rpx;
  }
  
  .module-card {
    padding: 24rpx;
  }
  
  .friend-avatar {
    width: 64rpx;
    height: 64rpx;
    margin-right: 16rpx;
  }
  
  .activity-avatar {
    width: 48rpx;
    height: 48rpx;
    margin-right: 12rpx;
  }
  
  .empty-content {
    padding: 32rpx 0;
  }
}