/* pages/profile/profile.wxss */
.container {
  height: 100vh;
  background-color: var(--background);
}

/* 登录提示 */
.login-prompt {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
}

.login-card {
  background-color: var(--surface);
  border-radius: 32rpx;
  padding: 64rpx 48rpx;
  align-items: center;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.login-title {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--text);
  margin-bottom: 16rpx;
}

.login-subtitle {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 48rpx;
}

/* 加载和错误状态 */
.loading-container,
.error-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 64rpx;
}

.loading-text {
  font-size: 32rpx;
  color: var(--text-secondary);
}

.error-text {
  font-size: 32rpx;
  color: var(--text);
  margin-bottom: 32rpx;
  text-align: center;
}

/* 个人内容 */
.profile-content {
  height: 100%;
}

.scroll-container {
  height: 100%;
  padding: 32rpx;
}

/* 用户信息卡片 */
.user-card {
  background-color: var(--surface);
  border-radius: 24rpx;
  padding: 32rpx;
  flex-direction: row;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 32rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 24rpx;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text);
  margin-bottom: 8rpx;
}

.user-email {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.edit-button {
  padding: 16rpx;
  border-radius: 20rpx;
  background-color: var(--light-blue);
}

/* 统计区域 */
.stats-section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text);
  margin-bottom: 24rpx;
}

.stats-grid {
  flex-direction: row;
  justify-content: space-between;
  gap: 24rpx;
}

.stat-item {
  flex: 1;
  background-color: var(--surface);
  border-radius: 16rpx;
  padding: 24rpx;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--primary);
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 22rpx;
  color: var(--text-secondary);
}

/* 菜单区域 */
.menu-section {
  margin-bottom: 32rpx;
}

.menu-list {
  background-color: var(--surface);
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.menu-item {
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 24rpx;
  border-bottom: 1rpx solid var(--border);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  flex-direction: row;
  align-items: center;
}

.menu-left icon {
  margin-right: 16rpx;
}

.menu-text {
  font-size: 28rpx;
  color: var(--text);
  font-weight: 500;
}

.logout-text {
  color: #FF6B6B;
}

/* 应用信息 */
.app-info {
  align-items: center;
  margin-top: 48rpx;
}

.app-version {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 8rpx;
}

.app-copyright {
  font-size: 20rpx;
  color: var(--text-secondary);
}

/* 响应式适配 */
@media (max-width: 768px) {
  .scroll-container {
    padding: 16rpx;
  }
  
  .login-card {
    padding: 48rpx 32rpx;
  }
  
  .user-card {
    padding: 24rpx;
  }
  
  .user-avatar {
    width: 96rpx;
    height: 96rpx;
    margin-right: 16rpx;
  }
  
  .stats-grid {
    flex-direction: column;
  }
  
  .stat-item {
    margin-bottom: 16rpx;
  }
  
  .menu-item {
    padding: 24rpx 20rpx;
  }
}