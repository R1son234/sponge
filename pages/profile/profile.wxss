/* pages/profile/profile.wxss */
.container {
  height: 100vh;
  background-color: var(--background);
}

/* 登录提示 */
.login-prompt {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
}

.login-card {
  background-color: var(--surface);
  border-radius: 32rpx;
  padding: 64rpx 48rpx;
  align-items: center;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.login-title {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--text);
  margin-bottom: 16rpx;
}

.login-subtitle {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 48rpx;
}

/* 加载和错误状态 */
.loading-container,
.error-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 64rpx;
}

.loading-text {
  font-size: 32rpx;
  color: var(--text-secondary);
}

.error-text {
  font-size: 32rpx;
  color: var(--text);
  margin-bottom: 32rpx;
  text-align: center;
}

/* 个人内容 */
.profile-content {
  height: 100%;
}

.scroll-container {
  height: 100%;
  padding: 32rpx;
}

/* 用户信息卡片 */
.user-card {
  display: flex;
  background-color: var(--surface);
  border-radius: 24rpx;
  padding: 32rpx;
  flex-direction: row;
  align-items: flex-start;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 32rpx;
}

.user-icon {
  width: 120rpx;
  height: 120rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  background-color: var(--light-blue);
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}

.user-info {
  display: flex;
  flex: 1;
  flex-direction: column;
}

.user-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text);
  margin-bottom: 12rpx;
  display: block;
}

.user-email {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
  display: block;
}

.edit-link {
  font-size: 26rpx;
  color: var(--primary);
  font-weight: 500;
  display: block;
}


/* 更多功能区域 */
.more-functions-section {
  margin-bottom: 32rpx;
}

.more-functions-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text);
  margin-bottom: 24rpx;
}

.function-card {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background-color: var(--surface);
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.function-card:last-child {
  margin-bottom: 0;
}

.function-left {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex: 1;
}

.function-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.function-info {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.function-title {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text);
  margin-bottom: 4rpx;
}

.function-subtitle {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.function-arrow {
  width: 24rpx;
  height: 24rpx;
  color: var(--text-secondary);
}

/* 应用信息 */
.app-info {
  align-items: center;
  margin-top: 48rpx;
}

.app-version {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 8rpx;
}

.app-copyright {
  font-size: 20rpx;
  color: var(--text-secondary);
}

/* 响应式适配 */
@media (max-width: 768px) {
  .scroll-container {
    padding: 16rpx;
  }
  
  .login-card {
    padding: 48rpx 32rpx;
  }
  
  .user-card {
    padding: 24rpx;
  }
  
  .user-avatar {
    width: 96rpx;
    height: 96rpx;
    margin-right: 16rpx;
  }
  

  
  .menu-item {
    padding: 24rpx 20rpx;
  }
}