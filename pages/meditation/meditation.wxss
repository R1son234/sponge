/* pages/meditation/meditation.wxss */
.container {
  height: 100vh;
  background-color: var(--background);
  padding: 32rpx;
}

.loading-container,
.error-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.loading-text {
  font-size: 32rpx;
  color: var(--text-secondary);
}

.error-text {
  font-size: 32rpx;
  color: var(--text);
  margin-bottom: 32rpx;
  text-align: center;
}

/* 快速开始引导 */
.quick-start-guide {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.guide-card {
  background-color: var(--surface);
  border-radius: 32rpx;
  padding: 64rpx;
  align-items: center;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.guide-title {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--text);
  margin-bottom: 16rpx;
}

.guide-duration {
  font-size: 32rpx;
  color: var(--primary);
  font-weight: 600;
  margin-bottom: 16rpx;
}

.guide-description {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 40rpx;
  margin-bottom: 48rpx;
}

/* 冥想类型选择 */
.types-container {
  height: 100%;
}

.section-title {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text);
  margin-bottom: 32rpx;
  text-align: center;
}

.types-scroll {
  height: calc(100% - 80rpx);
}

.type-card {
  background-color: var(--surface);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.type-icon {
  margin-bottom: 16rpx;
}

.type-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text);
  margin-bottom: 8rpx;
}

.type-description {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 36rpx;
}

/* 冥想进行中 */
.meditation-session {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.timer-display {
  align-items: center;
  margin-bottom: 64rpx;
}

.timer-text {
  font-size: 96rpx;
  font-weight: bold;
  color: var(--primary);
  margin-bottom: 16rpx;
}

.session-type {
  font-size: 32rpx;
  color: var(--text-secondary);
}

.control-buttons {
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 48rpx;
}

.session-info {
  align-items: center;
  gap: 16rpx;
}

.session-info text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 空状态 */
.empty-state {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.empty-text {
  font-size: 32rpx;
  color: var(--text-secondary);
}

/* 响应式适配 */
@media (max-width: 768px) {
  .container {
    padding: 16rpx;
  }
  
  .guide-card {
    padding: 48rpx 32rpx;
    margin: 0 16rpx;
  }
  
  .timer-text {
    font-size: 72rpx;
  }
  
  .control-buttons {
    gap: 16rpx;
  }
  
  .button-large {
    min-width: 200rpx;
  }
}